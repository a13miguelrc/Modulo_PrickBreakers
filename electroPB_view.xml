<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
     
        <!-- PARTE 1: SECCIÓN CON LAS VISTAS -->
            <!-- Declaración del formulario -->
            <record model="ir.ui.view" id="empleados_form">
                <field name="name">empleado</field>
                <field name="model">empleados.empleado</field> <!--El modelo se corresponde con el nombre de la clase, en este caso la clase empleado.-->
                <field name="type">form</field>
                <field name="arch" type="xml">
                    <form string="Empleados">
                        <group col='2' colspan='2'>
                            <field name="image" widget='image' class="oe_left oe_avatar"/>
                            <field name="nif" />
                            <field name="nombre" />
                            <field name="apellidos" />
                            <field name="direccion" />
                            <field name="fecha_nacimiento" />
                            <field name="telefono" />
                        </group>
                    </form>
                </field>
            </record>
            <!-- Declaración de la vista de árbol-->
            <record model="ir.ui.view" id="empleados_tree">
                <field name="name">empleado</field>
                <field name="model">empleados.empleado</field>
                <field name="type">tree</field>
                <field name="arch" type="xml">
                    <tree string="Empleados">
                        <field name="nif" />
                        <field name="nombre" />
                        <field name="apellidos" />
                        <field name="direccion" />
                        <field name="fecha_nacimiento" />
                        <field name="telefono" />
                    </tree>
                </field>
            </record>
            <!-- Declaracion de la vista kanban-->
            <record model="ir.ui.view" id="empleados_kanban">
            <field name="name">empleado</field>
            <field name="model">empleados.empleado</field>
            <field name="arch" type="xml">
                <kanban default_group_by="empleado_id">
                    <field name="color"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div t-attf-class="oe_kanban_color_{{kanban_getcolor(record.color.raw_value)}}
                                                  oe_kanban_global_click_edit oe_semantic_html_override
                                                  oe_kanban_card {{record.group_fancy==1 ? 'oe_kanban_card_fancy' : ''}}">
                                <div class="oe_dropdown_kanban">
                                    <!-- dropdown menu -->
                                    <div class="oe_dropdown_toggle">
                                        <span class="oe_e">#</span>
                                        <ul class="oe_dropdown_menu">
                                            <li>
                                                <a type="delete">Delete</a>
                                            </li>
                                            <li>
                                                <ul class="oe_kanban_colorpicker"
                                                    data-field="color"/>
                                            </li>
                                        </ul>
                                    </div>
                                    <div class="oe_clear"></div>
                                </div>
                                <div t-attf-class="oe_kanban_content">
                                    <!-- title -->
                                    Session name:
                                    <field name="name"/>
                                    <br/>
                                    Start date:
                                    <field name="start_date"/>
                                    <br/>
                                    duration:
                                    <field name="duration"/>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <!-- FIN PARTE 1 -->
         
        <!-- PARTE 2: ACCIONES -->
            <record model="ir.actions.act_window" id="action_empleado">
                <field name="name">empleado</field>
                <field name="res_model">empleados.empleado</field>
                <field name="view_type">form</field>
                <field name="view_mode">tree,form,kanban</field>
            </record>
        <!-- FIN PARTE 2 -->

        <!-- PARTE 1: SECCIÓN CON LAS VISTAS -->
            <!-- Declaración del formulario -->
            <record model="ir.ui.view" id="furgonetas_form">
                <field name="name">furgoneta</field>
                <field name="model">furgonetas.furgoneta</field>
                <field name="type">canvas</field>
                <field name="arch" type="xml">
                    <form string="Furgonetas">
                        <field name="marca" />
                        <field name="modelo" />
                        <field name="matricula" />
                    </form>
                </field>
            </record>

            <!-- Declaración de la vista tree -->
            <record model="ir.ui.view" id="furgonetas_form">
                <field name="name">furgoneta</field>
                <field name="model">furgonetas.furgoneta</field>
                <field name="type">tree</field>
                <field name="arch" type="xml">
                    <tree string="Furgonetas">
                        <field name="marca" />
                        <field name="modelo" />
                        <field name="matricula" />
                    </tree>
                </field>
            </record>

             <!-- Declaracion de la vista kanban-->
            <record model="ir.ui.view" id="furgonetas_kanban">
            <field name="name">furgoneta</field>
            <field name="model">furgonetas.furgonetao</field>
            <field name="arch" type="xml">
                <kanban default_group_by="furgoneta_id">
                    <field name="color"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div t-attf-class="oe_kanban_color_{{kanban_getcolor(record.color.raw_value)}}
                                                  oe_kanban_global_click_edit oe_semantic_html_override
                                                  oe_kanban_card {{record.group_fancy==1 ? 'oe_kanban_card_fancy' : ''}}">
                                <div class="oe_dropdown_kanban">
                                    <!-- dropdown menu -->
                                    <div class="oe_dropdown_toggle">
                                        <span class="oe_e">#</span>
                                        <ul class="oe_dropdown_menu">
                                            <li>
                                                <a type="delete">Delete</a>
                                            </li>
                                            <li>
                                                <ul class="oe_kanban_colorpicker"
                                                    data-field="color"/>
                                            </li>
                                        </ul>
                                    </div>
                                    <div class="oe_clear"></div>
                                </div>
                                <div t-attf-class="oe_kanban_content">
                                    <!-- title -->
                                    Session name:
                                    <field name="name"/>
                                    <br/>
                                    Start date:
                                    <field name="start_date"/>
                                    <br/>
                                    duration:
                                    <field name="duration"/>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

            <!-- PARTE 2: ACCIONES -->
            <record model="ir.actions.act_window" id="action_furgoneta">
                <field name="name">furgoneta</field>
                <field name="res_model">furgonetas.furgoneta</field>
                <field name="view_type">form</field>
                <field name="view_mode">tree,form,kanban</field>
            </record>
            <!-- FIN PARTE 2 -->

        <!-- PARTE 3: MENÚ -->
            <menuitem id="menu_empleados_main" name="ElectroPB" action="action_empleado"/>
            <menuitem id="menu_empleados_gestion" parent="menu_empleados_main" name="Gestionar"/>
            <menuitem id="menu_empleados_empleados" parent="menu_empleados_gestion" name="Empleados" action="action_empleado" />
            <menuitem id="menu_empleados_perfiles" parent="menu_empleados_empleados" name="Perfiles" action="action_empleado"/>
            <menuitem id="menu_furgonetas_furgonetas" parent="menu_empleados_gestion" name="Furgonetas" action="action_furgoneta" />
            <menuitem id="menu_furgonetas_datos" parent="menu_furgonetas_furgonetas" name="Datos" action="action_furgoneta" />
        <!-- FIN PARTE 3 -->

    </data>
</openerp>