<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
     
        <!-- EMPLEADO: SECCIÓN CON LAS VISTAS -->
            <!-- Declaración del formulario -->
            <record model="ir.ui.view" id="empleados_form">
                <field name="name">empleado</field>
                <field name="model">empleados.empleado</field> <!--El modelo se corresponde con el nombre de la clase, en este caso la clase empleado.-->
                <field name="type">form</field>
                <field name="arch" type="xml">
                    <form string="Empleados">
                        <group col='2' colspan='2'>
                            <field name="image" widget='image' class="oe_left oe_avatar"/>
                            <field name="nif" />
                            <field name="nombre" />
                            <field name="apellidos" />
                            <field name="direccion" />
                            <field name="fecha_nacimiento" />
                            <field name="telefono" />
                        </group>
                    </form>
                </field>
            </record>

            <!-- Declaración de la vista de árbol-->
            <record model="ir.ui.view" id="empleados_tree">
                <field name="name">empleado</field>
                <field name="model">empleados.empleado</field>
                <field name="type">tree</field>
                <field name="arch" type="xml">
                    <tree string="Empleados">
                        <field name="nif" />
                        <field name="nombre" />
                        <field name="apellidos" />
                        <field name="direccion" />
                        <field name="fecha_nacimiento" />
                        <field name="telefono" />
                    </tree>
                </field>
            </record>

            <!-- Declaración de la vista de kanban-->
            <record model="ir.ui.view" id="empleados_kanban">
                <field name="name">empleado</field>
                <field name="model">empleados.empleado</field>
                <field name="type">kanban</field>
                <field name="arch" type="xml">
                    <kanban>
                        <field name="image"/>
                        <templates>
                            <t t-name="kanban-box">
                                <div class="oe_resource_vignette">
                                    <div class="oe_resource_image" style="width: 200px; height: 200px;">
                                        <a type="open">
                                            <img t-att-src="kanban_image('empleados.empleado', 'image', 'record.id.value')" class="oe_resource_photo" style="width: 200px; height: 200px;" />
                                        </a>
                                    </div>
                                    <div class="oe_resource_details">
                                        <ul>
                                            <li><field name="nombre"/></li>
                                            <li><field name="telefono"/></li>
                                        </ul>
                                    </div>
                                </div>
                            </t>
                        </templates>
                    </kanban>
                </field>
            </record>
        <!-- FIN VISTAS EMPLEADO -->
         
        <!-- EMPLEADO: ACCIONES -->
            <record model="ir.actions.act_window" id="action_empleado">
                <field name="name">empleado</field>
                <field name="res_model">empleados.empleado</field>
                <field name="view_type">form</field>
                <field name="view_mode">tree,form,kanban</field>
            </record>
        <!-- FIN ACCIONES EMPLEADO -->

        <!-- FURGONETA: SECCIÓN CON LAS VISTAS -->
            <!-- Declaración del formulario -->
            <record model="ir.ui.view" id="furgonetas_form">
                <field name="name">furgoneta</field>
                <field name="model">furgonetas.furgoneta</field>
                <field name="type">form</field>
                <field name="arch" type="xml">
                    <form string="Furgonetas">
                        <group col='2' colspan='2'>
                            <field name="image" widget='image' class="oe_left oe_avatar"/>
                            <field name="marca" on_change="_set_list_data(marca)"/>
                            <field name="modelo" />
                            <field name="matricula" />
                        </group>
                    </form>
                </field>
            </record>

            <!-- Declaración de la vista tree -->
            <record model="ir.ui.view" id="furgonetas_tree">
                <field name="name">furgoneta</field>
                <field name="model">furgonetas.furgoneta</field>
                <field name="type">tree</field>
                <field name="arch" type="xml">
                    <tree string="Furgonetas">
                        <field name="marca" />
                        <field name="modelo" />
                        <field name="matricula" />
                    </tree>
                </field>
            </record>
        <!-- FIN VISTAS FURGONETA -->

        <!-- FURGONETA: ACCIONES -->
            <record model="ir.actions.act_window" id="action_furgoneta">
                <field name="name">furgoneta</field>
                <field name="res_model">furgonetas.furgoneta</field>
                <field name="view_type">form</field>
                <field name="view_mode">tree,form</field>
            </record>
        <!-- FIN ACCIONES FURGONETA -->




        <!-- SERVICIO: SECCIÓN CON LAS VISTAS -->
            <!-- Declaración del formulario -->
            <record model="ir.ui.view" id="servicios_form">
                <field name="name">servicio</field>
                <field name="model">servicios.servicio</field>
                <field name="type">form</field>
                <field name="arch" type="xml">
                    <form string="Servicios">
                        <group col='2' colspan='2'>
                            <field name="codigo" />
                            <field name="tipo" />
                            <field name="ubicacion" />
                            <field name="electrodomestico" />
                            <field name="descripcion" />
                            <field name="direccion" />
                        </group>
                    </form>
                </field>
            </record>

            <!-- Declaración de la vista tree -->
            <record model="ir.ui.view" id="servicios_tree">
                <field name="name">servicio</field>
                <field name="model">servicios.servicio</field>
                <field name="type">tree</field>
                <field name="arch" type="xml">
                    <tree string="Furgonetas">
                        <field name="codigo" />
                        <field name="tipo" />
                        <field name="ubicacion" />
                        <field name="electrodomestico" />
                        <field name="descripcion" />
                        <field name="direccion" />
                    </tree>
                </field>
            </record>
            <!-- FIN VISTAS SERVICIO -->

            <!-- SERVICIO: ACCIONES -->
            <record model="ir.actions.act_window" id="action_servicio">
                <field name="name">servicio</field>
                <field name="res_model">servicios.servicio</field>
                <field name="view_type">form</field>
                <field name="view_mode">tree,form</field>
            </record>
            <!-- FIN ACCIONES SERVICIO -->

        <!-- HOJASERVICIO: SECCIÓN CON LAS VISTAS -->
            <!-- Declaración del formulario -->
            <record model="ir.ui.view" id="hojas_form">
                <field name="name">hoja</field>
                <field name="model">hojas.hoja</field>
                <field name="type">form</field>
                <field name="arch" type="xml">
                    <form string="HojaDeServicio">
                        <group col='2' colspan='2'>
                            <field name="empleado_id" />
                            <field name="hora_salida" />
                            <field name="hora_llegada" />
                            <field name="furgoneta_id" />
                            <field name="servicio_id" />
                        </group>
                    </form>
                </field>
            </record>

            <!-- Declaración de la vista tree -->
            <record model="ir.ui.view" id="hojas_tree">
                <field name="name">hoja</field>
                <field name="model">hojas.hoja</field>
                <field name="type">tree</field>
                <field name="arch" type="xml">
                    <tree string="HojaDeServicio">
                        <field name="empleado_id" />
                        <field name="hora_salida" />
                        <field name="hora_llegada" />
                        <field name="furgoneta_id" />
                        <field name="servicio_id" />
                    </tree>
                </field>
            </record>
            <!-- FIN VISTAS HOJASERVICIO -->

            <!-- HOJASERVICIO: ACCIONES -->
            <record model="ir.actions.act_window" id="action_hoja">
                <field name="name">hoja</field>
                <field name="res_model">hojas.hoja</field>
                <field name="view_type">form</field>
                <field name="view_mode">tree,form</field>
            </record>
            <!-- FIN ACCIONES HOJASERVICIO -->

        <!-- MENÚ -->
            <menuitem id="menu_empleados_main" name="ElectroPB" action="action_empleado"/>
            <menuitem id="menu_empleados_gestion" parent="menu_empleados_main" name="Gestionar"/>
            <menuitem id="menu_empleados_empleados" parent="menu_empleados_gestion" name="Empleados" action="action_empleado" />
            <menuitem id="menu_empleados_perfiles" parent="menu_empleados_empleados" name="Perfiles" action="action_empleado"/>
            <menuitem id="menu_furgonetas_furgonetas" parent="menu_empleados_gestion" name="Furgonetas" action="action_furgoneta" />
            <menuitem id="menu_furgonetas_datos" parent="menu_furgonetas_furgonetas" name="Datos" action="action_furgoneta" />
            <menuitem id="menu_servicios_servicios" parent="menu_empleados_gestion" name="Servicios" action="action_servicio" />
            <menuitem id="menu_servicios_datos" parent="menu_servicios_servicios" name="Datos" action="action_servicio" />
            <menuitem id="menu_hojas_hojas" parent="menu_empleados_gestion" name="Hojas de Servicio" action="action_hoja" />
            <menuitem id="menu_hojas_datos" parent="menu_hojas_hojas" name="Datos" action="action_hoja" />
        <!-- FIN MENU -->
<!--FIN-->
    </data>
</openerp>